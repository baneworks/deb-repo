}

# build task: buildTask <task>
buildTask() {
  local task="$1"
  local bspecs

  # fixme: test mode
  info "buildTask /$task/" "--- test mode ---"
  info "buildTask /$task/" "... taskInit skipped ..."

  # taskInit $task
  # bspecs=$(taskReqs $task)

  # fixme: test mode
  info "buildTask /$task/" "... breqAddNode skipped ..."
  # local retcode last_package
  # for bs in ${bspecs[@]}; do
  #   last_package=$(breqAddNode 0 "$bs" "" "$task")
  #   retcode=$?
  #   [[ $retcode -gt 0 ]] && error 1 EDEPEND "failed to get depended package: $(bspecName $last_package)"
  #   echo "" # instead [ OK ]
  # done

  # fixme: test mode
  info "buildTask /$task/" "... taskSumVReq skipped ..."
  # taskSumVreq "$task"

  # fixme: test mode
  # info "buildTask /$task/" "... taskFinalDepends skipped ..."
  [[ -f "$BREQ_DIR/$task/.packages" ]] && rm -f "$BREQ_DIR/$task/.packages"
  taskFinalDepends "$task"
}

# build all tasks: buildAll
buildAll() {
  buildInit || return 1
  for task in $(taskList); do
    buildTask "$task"
    # fixme: test mode
    break
  done
}

